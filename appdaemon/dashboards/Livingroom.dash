    icon_off: mdi-volume-off

rokupower:
    widget_type: script
    title: Roku Power
    entity: script.xboxpower
    title_style: "color: #d580ff"
    icon_style_inactive: "color: #d580ff"
    icon_style_active: "color: #aa00ff"
