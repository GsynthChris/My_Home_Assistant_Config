#
# Main arguments, all optional
#
title: Livingroom
widget_dimensions: [110, 110]
widget_margins: [2, 2]
columns: 9
global_parameters:
    use_comma: 0
    precision: 1
    use_hass_icon: 1


###########################################################################################
######################                 Custom Widgets                ######################
###########################################################################################
volup:
    widget_type: script
    title: Volume Up
    entity: script.kenwoodvolup
    title_style: "color: #0000ff"
    icon_style_inactive: "color: #0000ff"
    icon_style_active: "color: #6666ff"
    icon_on: fa-volume-up
    icon_off: fa-volume-up

voldown:
    widget_type: script
    title: Volume Down
    entity: script.kenwoodvoldown
    title_style: "color: #0000ff"
    icon_style_inactive: "color: #0000ff"
    icon_style_active: "color: #6666ff"
    icon_on: fa-volume-down
    icon_off: fa-volume-down

volupplus:
    widget_type: script
    title: Volume Up +8
    entity: script.livvolupplus
    title_style: "color: #0000ff"
    icon_style_inactive: "color: #0000ff"
    icon_style_active: "color: #6666ff"
    icon_on: mdi-volume-plus
    icon_off: mdi-volume-plus

voldownplus:
    widget_type: script
    title: Volume Down -8
    entity: script.livvoldownplus
    title_style: "color: #0000ff"
    icon_style_inactive: "color: #0000ff"
    icon_style_active: "color: #6666ff"
    icon_on: mdi-volume-minus
    icon_off: mdi-volume-minus

volmute:
    widget_type: script
    title: Mute
    entity: script.kenwoodvolmute
    title_style: "color: #0000ff"
    icon_style_inactive: "color: #0000ff"
    icon_style_active: "color: #6666ff"
