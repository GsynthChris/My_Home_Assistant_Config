###########################################################################################
##################                  Lights and Switches                  ##################
###########################################################################################
hallway:
  widget_type: switch
  title: Hallway
  entity: light.hallway_light
  icon_on: mdi-ceiling-light
  icon_off: mdi-ceiling-light

livrmlamp:
  widget_type: switch
  title: Livingroom
  title2: Floor Lamp
  entity: light.livingroom_lamp
  icon_on: mdi-floor-lamp
  icon_off: mdi-floor-lamp

undercabinet:
  widget_type: switch
  title: Undercabinet
  entity: light.under_cabinet_light
  icon_on: mdi-file-cabinet
  icon_off: mdi-file-cabinet

kitchenceilinglight:
  widget_type: switch
  title: Kitchen
  title2: Ceiling Light
  entity: light.kitchen_ceiling_light
  icon_on: mdi-ceiling-light
  icon_off: mdi-ceiling-light

ceilingfan:
  widget_type: switch
  title: Kitchen
  title2: Ceiling Fan
  entity: fan.kitchen_ceiling_fan
  icon_on: mdi-fan mdi-spin
  icon_off: mdi-fan

sink:
  widget_type: switch
  title: Kitchen Sink
  entity: light.kitchen_sink_light
  icon_on: mdi-water-pump
  icon_off: mdi-water-pump

motiontoggle:
  widget_type: switch
  title: Motion Sensors
  title2: ON/OFF
  entity: group.upstairsmotion
  icon_on: fa-toggle-on
  icon_off: fa-toggle-off

alllightstoggle:
  widget_type: switch
  title: All Lights
  entity: group.all_lights
  icon_on: mdi-brightness-7 mdi-spin
  icon_off: fa-cloud-moon

  
  climatecontrolac:
    widget_type: climate
    entity: climate.house_thermostat
    level_style: "font-size: 200%;" # Current Temp Size
    level2_style: "font-size: 125%;" # Target Temp Size
    unit_style: "font-size: 600%;"
    title_style: "font-size: 150%;"
    title2_style: "font-size: 100%;"
    level_up_style: "font-size: 150%;"
    level_down_style: "font-size: 150%;"
    title: House Thermostat
    title2: Current Indoor Temp
    units: 'F'
    step: 1
    precision: 1

roomtemp:
  widget_type: sensor
  title: House Temp
  title_style: "color: #0000ff"
  icon_style_inactive: "color: #0000ff"
  icon_style_active: "color: #ff8080"
  units: "&deg;F"
  precision: 0
  entity: sensor.average_home_temp

outsidetemp:
  widget_type: sensor
  title: Oustide Temp
  units: "&deg;F"
  title_style: "color: #0000ff"
  icon_style_inactive: "color: #0000ff"
  icon_style_active: "color: #ff8080"
  precision: 0
  entity: sensor.dark_sky_temperature

