
#
# Main arguments, all optional
#
title: Thermostat
widget_dimensions: [115, 100]
widget_size: [1, 1]
widget_margins: [5, 5]
columns: 10
global_parameters:
  use_comma: 0
  precision: 1
  use_hass_icon: 0
  namespace: default
  devices:
    media_player:
      step: 5
###########################################################################################
######################                 Custom Widgets                ######################
###########################################################################################

  
climatecontrolac:
  widget_type: climate
  entity: climate.thermostat
  level_style: "font-size: 200%;" # Current Temp Size
  level2_style: "font-size: 125%;" # Target Temp Size
  unit_style: "font-size: 600%;"
  title_style: "font-size: 150%;"
  title2_style: "font-size: 100%;"
  level_up_style: "font-size: 150%;"
  level_down_style: "font-size: 150%;"
  title: House Thermostat
  title2: Current Indoor Temp
  units: 'F'
  step: 1
  precision: 1
  
weather:
  widget_type: weather
  title: Weather Forecast
  title_style: "font-size: 150%;"
  units: "&deg;F"
  widget_style: "font-size: 90%;" #Whole widget font size
#  main_style: "font-size: 90%;" # Temp size
#  unit_style: "font-size: 90%;" # F size
#  sub_style: "font-size: 90%;" # Other data size


camerafront:
  widget_type: camera
  entity: camera.front_yard
  base_url: http://192.168.29.5:8123
  # refresh: 1
  stream: 'on'
# camerafrontsml:
#   widget_type: camera
#   entity: camera.front_yard_sml
#   base_url: http://192.168.29.5:8123
#   stream: on
cameranws:
  widget_type: camera
  entity: camera.ncr
  base_url: http://192.168.29.5:8123
  stream: 'on'
