###########################################################################################
##################                     Basic Widgets                     ##################
###########################################################################################
kitchenleds:
  widget_type: input_select
  title: Kitchen LEDs
  entity: input_select.holiday_led_effect
    
kitchenledspeed:
  widget_type: input_slider
  title: LED Speed
  entity: input_number.animation_speed

###########################################################################################
##################                         Sensors                       ##################
###########################################################################################
outsidetemp:
  widget_type: sensor
  title: Outside
  units: "&deg;F"
  precision: 0
  entity: sensor.weather_temperature

livrmtemp:
  widget_type: sensor
  title: Livingroom
  units: "&deg;F"
  precision: 0
  entity: sensor.livingroom_temp

kitchentemp:
  widget_type: sensor
  title: Kitchen
  units: "&deg;F"
  precision: 0
  entity: sensor.kitchen_temp

officetemp:
  widget_type: sensor
  title: Office
  units: "&deg;F"
  precision: 0
  entity: sensor.office_temp_2

mstbedtemp:
  widget_type: sensor
  title: Master Bedroom
  units: "&deg;F"
  precision: 0
  entity: sensor.average_mstbd_temp

occupied:
  widget_type: binary_sensor
  title: Anybody Home?
  entity: binary_sensor.people_home
  icon_on: mdi-account-group
  icon_off: mdi-home-outline

kitmotion:
  widget_type: binary_sensor
  title: Kitchen Motion
  entity: binary_sensor.kitchen_motion
  icon_on: fa-running
  icon_off: fa-walking

bedmotion:
  widget_type: binary_sensor
  title: Motion Sensor
  title2: Master Bedroom
  entity: binary_sensor.master_bed_motion
  icon_on: fa-running
  icon_off: fa-walking

offmotion:
  widget_type: binary_sensor
  title: Motion Sensor
  title2: Office
  entity: binary_sensor.office_motion
  icon_on: fa-running
  icon_off: fa-walking

shopmotion:
  widget_type: binary_sensor
  title: Motion Sensor
  title2: Shop
  entity: binary_sensor.shop_motion
  icon_on: fa-running
  icon_off: fa-walking

laumotion:
  widget_type: binary_sensor
  title: Motion Sensor
  title2: Laundry Room
  entity: binary_sensor.laundry_motion
  icon_on: fa-running
  icon_off: fa-walking

motiontoggle:
  widget_type: switch
  title: Motion Sensors
  title2: ON/OFF
  entity: group.upstairsmotion
  icon_on: fa-toggle-on
  icon_off: fa-toggle-off
###########################################################################################
##################                     Device Tracker                    ##################
###########################################################################################
chris:
  widget_type: device_tracker
  title: Chris
  device: skidata_iphone
  icon_on: fa-robot
  icon_off: mdi-car-estate
lizz:
  widget_type: device_tracker
  title: Lizz
  device: lizz_iphone
  icon_on: fa-user-graduate
  icon_off: mdi-car-hatchback
zach:
  widget_type: device_tracker
  title: Zach
  device: zach_iphone
  icon_on: fa-child
  icon_off: mdi-car-sports
bobby:
  widget_type: device_tracker
  title: Bobby
  device: bobby_iphone
  icon_on: fa-drum
  icon_off: fa-truck-pickup

###########################################################################################
##################                  Lights and Switches                  ##################
###########################################################################################
hallway:
  widget_type: switch
  title: Hallway
  entity: light.hallway_light
  icon_on: mdi-ceiling-light
  icon_off: mdi-ceiling-light

livrmlamp:
  widget_type: switch
  title: Livingroom
  title2: Floor Lamp
  entity: light.livingroom_lamp
  icon_on: mdi-floor-lamp
  icon_off: mdi-floor-lamp

livingroomceilinglight:
  widget_type: switch
  title: Livingroom
  title2: Ceiling Light
  entity: light.livingroom_ceiling_light
  icon_on: mdi-ceiling-light
  icon_off: mdi-ceiling-light

livingroomfan:
  widget_type: switch
  title: Livingroom
  title2: Ceiling Fan
  entity: fan.livingroom_ceiling_fan
  icon_on: mdi-fan mdi-spin
  icon_off: mdi-fan

stairs:
  widget_type: switch
  title: Stairs
  entity: light.stairs_light
  icon_on: mdi-stairs
  icon_off: mdi-stairs

sink:
  widget_type: switch
  title: Kitchen Sink
  entity: light.kitchen_sink_light
  icon_on: mdi-water-pump
  icon_off: mdi-water-pump

undercabinet:
  widget_type: switch
  title: Undercabinet
  entity: light.under_cabinet_light
  icon_on: mdi-file-cabinet
  icon_off: mdi-file-cabinet

kitchenceilinglight:
  widget_type: switch
  title: Kitchen
  title2: Ceiling Light
  entity: light.kitchen_ceiling_light
  icon_on: mdi-ceiling-light
  icon_off: mdi-ceiling-light

kitchenceilingfan:
  widget_type: switch
  title: Kitchen
  title2: Ceiling Fan
  entity: fan.kitchen_ceiling_fan
  icon_on: mdi-fan mdi-spin
  icon_off: mdi-fan

boxfan:
  widget_type: switch
  title: Office
  title2: Box Fan
  entity: switch.box_fan
  icon_on: mdi-fan mdi-spin
  icon_off: mdi-fan

desklamp:
  widget_type: switch
  title: Office
  title2: Desk Lamp
  entity: light.desk_lamp
  icon_on: mdi-desk-lamp
  icon_off: mdi-desk-lamp

floorlamp:
  widget_type: switch
  title: Office
  title2: Floor Lamp
  entity: light.floor_lamp
  icon_on: mdi-floor-lamp
  icon_off: mdi-floor-lamp

computer:
  widget_type: switch
  title: Office
  title2: Computer
  entity: switch.office_computer
  icon_on: mdi-desktop-tower-monitor
  icon_off: mdi-desktop-tower-monitor

alllightstoggle:
  widget_type: switch
  title: All Lights
  entity: group.all_lights
  icon_on: mdi-brightness-7 mdi-spin
  icon_off: fa-cloud-moon
 

layout:
  - clock.clock(2x1), weather(2x2), camerafront(6x4)
  - climatecontrolac(2x1)
  - chris, lizz, zach, motiontoggle
  - cameranws(3x3), alllightstoggle
  - livingroomceilinglight, hallway, computer, desklamp, sink, kitchenceilinglight, kitchenleds(1x1)
  - livingroomfan, livrmlamp, floorlamp, undercabinet, stairs, kitchenceilingfan, kitchenledspeed(1x1)